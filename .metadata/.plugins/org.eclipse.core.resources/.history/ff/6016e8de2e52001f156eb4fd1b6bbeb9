package com.aurionpro.model;

import java.util.LinkedList;
import java.util.List;

import javafx.util.Pair;

public class TicTacToeFacade {
	private TicTacToeGame game;

	public TicTacToeFacade(int size) {
		super();
		board = new Board(size);
		this.game = new TicTacToeGame(board);
		
		
	}
	public void initializationGame() {
		players = new LinkedList<>();
		PlayingPieceX crossPiece = new PlayingPieceX();
		Player player1 = new Player("Player 'X' ", crossPiece);

		PlayingPieceO noughtsPiece = new PlayingPieceO();
		Player player2 = new Player("Player 'O' ", noughtsPiece);

		players.add(player1);
		players.add(player2);

		System.out.println("Enter the size of grid : ");
		int sizeOfGrid = scanner.nextInt();
		gameBoard = new Board(sizeOfGrid);

	}

	public void initializeGame() {
		game.initializationGame();
	}

	public String startGame() {
		return game.startGame();
	}

	public void printBoard() {
		game.gameBoard.printBoard();
	}

	public List<Pair<Integer, Integer>> getFreeCalls() {
		return game.gameBoard.getFreeCells();
	}

	public boolean addPiece(int row, int column, Player player) {
		return game.gameBoard.addPiece(row, column, player.playingPiece);
	}

}
