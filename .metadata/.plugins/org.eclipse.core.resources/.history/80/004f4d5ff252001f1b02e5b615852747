package com.aurionpro.model;

import static org.junit.jupiter.api.Assertions.assertEquals;
import static org.junit.jupiter.api.Assertions.assertTrue;

import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;

import com.aurionpro.model.AreaCalculator;

public class AreaCalculatorTest {

	AreaCalculator calculator;
	@BeforeEach
	void init() {
		calculator = new AreaCalculator();
	}
	@Test
	void testAreaOfCalculatorOfCircle() {
		assertEquals(78.5, calculator.calculateAreaOfCircle(5), "Find the area of circle");
	}

	@Test
	void testAreaOfCalculatorOfRectangle() {
		assertEquals(200, calculator.calculateAreaOfRectangle(10, 20), "Find the area of rectangle");
	}

	@Test
	void testAreaOfCalculatorOfTriangle() {
		assertEquals(150, calculator.calculateAreaOfTriangle(10, 30), "Find the area of triangle");
	}
	
	

}
